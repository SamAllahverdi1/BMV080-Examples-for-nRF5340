/*
 * Devicetree overlay for the Bosch BMV080 Particulate Matter Sensor
 */

/* 1. Define the pin configuration for I2C2.
 * NOTE: We are now using &i2c2, not &i2c0.
 * The pins P1.02 and P1.03 are compatible with I2C2 on this board.
 */
&pinctrl {
    i2c2_default: i2c2_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 1, 2)>, /* P1.02 */
                    <NRF_PSEL(TWIM_SCL, 1, 3)>; /* P1.03 */
        };
    };
};

/* 2. Enable the I2C2 peripheral and link it to the pin configuration */
&i2c2 {
    status = "okay";
    pinctrl-0 = <&i2c2_default>;
    pinctrl-names = "default";

    /* This is your I2C sensor node */
    bmv080_node: bmv080@56 {
        compatible = "bosch,bmv080";
        reg = <0x56>; /* This is the 7-bit I2C address */
        status = "okay";
    };
};

/* 3. Create the alias for your sensor */
/ {
    aliases {
        bmv080 = &bmv080_node;
    };
};